.weui-navigation-bar {
  --height: 44px;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.weui-navigation-bar__inner {
  position: relative;
  height: var(--height);
  display: flex;
  align-items: center;
  padding-left: 16px;
  padding-right: 16px;
}

.weui-navigation-bar__inner.ios {
  padding-left: 8px;
}

.weui-navigation-bar__left {
  position: relative;
  display: flex;
  align-items: center;
  margin-right: 16px;
}

.weui-navigation-bar__center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
}

.weui-navigation-bar__right {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 16px;
}

.weui-navigation-bar__btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  margin-right: 8px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.05);
}

.weui-navigation-bar__btn:last-child {
  margin-right: 0;
}

.weui-navigation-bar__btn_goback {
  background-color: transparent;
}

.weui-navigation-bar__btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.weui-navigation-bar__title {
  font-size: 17px;
  font-weight: 600;
  color: #000;
  line-height: 1.4;
  max-width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.weui-navigation-bar__loading {
  display: flex;
  align-items: center;
  justify-content: center;
}