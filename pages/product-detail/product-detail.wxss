/* pages/product-detail/product-detail.wxss */
page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

.container {
  background-color: #f5f5f5;
}

/* 商品图片轮播 */
.image-section {
  position: relative;
  background-color: white;
}

.image-swiper {
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 商品基本信息 */
.product-basic {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: 600;
  color: #e34d59;
  margin-bottom: 20rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.product-meta {
  display: flex;
  gap: 40rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

/* 规格选择 */
.spec-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.spec-group {
  margin-bottom: 30rpx;
}

.spec-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.spec-option {
  padding: 16rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f8f8f8;
}

.spec-option.selected {
  border-color: #0052d9;
  color: #0052d9;
  background-color: #e8f2ff;
}

/* 详细信息 */
.detail-info {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-list {
  border-top: 1rpx solid #eee;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

/* 营养成分 */
.nutrition-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.nutrition-list {
  border-top: 1rpx solid #eee;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.nutrition-label {
  font-size: 26rpx;
  color: #666;
}

.nutrition-value {
  font-size: 26rpx;
  color: #333;
}

/* 商品描述 */
.description-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 服务保障 */
.service-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.service-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.service-icon {
  color: #52c41a;
  font-size: 28rpx;
  font-weight: bold;
}

.service-text {
  font-size: 28rpx;
  color: #333;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding: 20rpx;
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 40rpx;
  margin-right: 20rpx;
}

.contact-service,
.favorite {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #666;
}

.action-text {
  font-size: 20rpx;
  color: #666;
}

.purchase-buttons {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.add-cart-btn,
.buy-now-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.add-cart-btn {
  background-color: #ff6b35;
  color: white;
}

.buy-now-btn {
  background-color: #0052d9;
  color: white;
}

/* 规格选择模态框 */
.spec-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.spec-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.spec-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.spec-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.spec-product {
  display: flex;
  gap: 20rpx;
}

.spec-product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.spec-product-info {
  flex: 1;
}

.spec-product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #e34d59;
  margin-bottom: 8rpx;
}

.spec-product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.spec-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.spec-body {
  padding: 30rpx;
}

.quantity-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.quantity-label {
  font-size: 28rpx;
  color: #333;
}

.quantity-controls {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #666;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background-color: white;
}

.spec-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  background-color: #0052d9;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}