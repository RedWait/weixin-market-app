/* pages/cart/cart.wxss */
page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.container {
  min-height: 100vh;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.continue-shopping-btn {
  background-color: #0052d9;
  color: white;
  padding: 24rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 购物车内容 */
.cart-content {
  padding: 20rpx;
}

/* 编辑栏 */
.edit-bar {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0;
}

.edit-btn {
  font-size: 28rpx;
  color: #0052d9;
  padding: 16rpx 24rpx;
}

/* 商品列表 */
.cart-list {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 选择框 */
.item-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-checkbox.checked {
  background-color: #0052d9;
  border-color: #0052d9;
}

.checkbox-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品信息 */
.item-info {
  display: flex;
  flex: 1;
  margin-right: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 32rpx;
  color: #e34d59;
  font-weight: 600;
}

/* 数量控制 */
.quantity-controls {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #666;
}

.quantity-btn.disabled {
  color: #ccc;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background-color: white;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #ff4d4f;
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding: 20rpx;
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.select-all-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.select-all-checkbox.checked {
  background-color: #0052d9;
  border-color: #0052d9;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
}

.total-info {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total-price {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.price-value {
  font-size: 32rpx;
  color: #e34d59;
  font-weight: 600;
}

.total-count {
  font-size: 24rpx;
  color: #999;
}

.checkout-btn,
.batch-delete-btn {
  background-color: #0052d9;
  color: white;
  padding: 24rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 160rpx;
  text-align: center;
}

.batch-delete-btn {
  background-color: #ff4d4f;
}